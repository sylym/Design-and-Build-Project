if [ "$ACTION" = 'add' ]; 
then
  DEVICE_NAME=$(ls /sys/$DEVPATH | grep tty)
  if [ ${DEVICENAME} = '1-1.1:1.0' ]; 
then ln -s /dev/$DEVICE_NAME /dev/ttyMODULO1_FAST
  elif [ ${DEVICENAME} = '1-1.2:1.0' ]; 
then ln -s /dev/$DEVICE_NAME /dev/ttyMODULO1_SLOW
  fi
fi
if [ "$ACTION" = 'remove' ] ; 
then
  if [ ${DEVICENAME} = '1-1.1:1.0' ] ; 
then rm /dev/ttyMODULO1_FAST
  elif [ ${DEVICENAME} = '1-1.2:1.0' ] ; 
then rm /dev/ttyMODULO1_SLOW
  fi
fi
